{
    "manifest_version": 3,
    "name": "solver-ai",
    "version": "1.0",
    "description": "Online Quiz Question Solver",
    "permissions": [
      "contextMenus",
      "storage",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": "images/icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [
      "https://api.openai.com/v1/chat/completions"
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"]
      }
    ]
}