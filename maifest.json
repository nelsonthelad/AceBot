{
    "manifest_version": 3,
    "name": "OpenAI Text Analyzer",
    "version": "1.0",
    "permissions": [
      "contextMenus",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }